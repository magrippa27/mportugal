---
import { type Language, useTranslations } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  lang: Language;
  categories?: string[];
  heroImage?: string | null;
}

const { title, description, pubDate, slug, lang, heroImage } = Astro.props;
const t = useTranslations(lang);

const formattedDate = pubDate.toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="radio-post-card">
  <a href={`/${lang}/blog/${slug}`} class="wood-post-frame">
    <div class="wood-post-inner">
      <div class="gold-post-plate">
        <div class="tiny-screw screw-tl"></div>
        <div class="tiny-screw screw-tr"></div>
        <div class="tiny-screw screw-bl"></div>
        <div class="tiny-screw screw-br"></div>
        
        {heroImage && (
          <div class="post-image-wrapper">
            <img src={heroImage} alt={title} class="post-image" />
          </div>
        )}
        
        <div class="post-content">
          <time datetime={pubDate.toISOString()} class="post-date">{formattedDate}</time>
          <h3 class="post-title">{title}</h3>
          <p class="post-description">{description}</p>
          <div class="read-more">{t('blog.readMore')} â†’</div>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .radio-post-card {
    height: 100%;
  }

  .wood-post-frame {
    display: block;
    background: linear-gradient(135deg, #5c4033 0%, #3d2817 50%, #5c4033 100%);
    border-radius: 8px;
    padding: 10px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    position: relative;
    height: 100%;
    transition: transform 0.3s ease;
  }

  .wood-post-frame:hover {
    transform: translateY(-4px);
  }

  .wood-post-frame::before {
    content: '';
    position: absolute;
    inset: 5px;
    background-image: 
      repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.03) 0px, transparent 1px, transparent 3px, rgba(0, 0, 0, 0.03) 4px);
    border-radius: 4px;
    pointer-events: none;
  }

  .wood-post-inner {
    background: linear-gradient(180deg, rgba(92, 64, 51, 0.3) 0%, rgba(61, 40, 23, 0.5) 50%, rgba(92, 64, 51, 0.3) 100%);
    border-radius: 4px;
    padding: 10px;
    height: 100%;
  }

  .gold-post-plate {
    background: linear-gradient(135deg, #b8b8b8 0%, #d4d4d4 20%, #b8b8b8 40%, #a0a0a0 60%, #b8b8b8 80%, #d4d4d4 100%);
    border: 2px solid #808080;
    border-radius: 4px;
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 
      0 4px 8px rgba(0, 0, 0, 0.4),
      inset 0 1px 2px rgba(255, 255, 255, 0.7);
  }

  .tiny-screw {
    position: absolute;
    width: 5px;
    height: 5px;
    background: radial-gradient(circle at 30% 30%, #d4d4d4 0%, #b8b8b8 50%, #808080 100%);
    border-radius: 50%;
    box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.5), inset 0 -1px 1px rgba(0, 0, 0, 0.5);
    z-index: 2;
  }

  .tiny-screw::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    width: 2px;
    height: 0.5px;
    background: rgba(0, 0, 0, 0.4);
  }

  .screw-tl { top: 5px; left: 5px; }
  .screw-tr { top: 5px; right: 5px; }
  .screw-bl { bottom: 5px; left: 5px; }
  .screw-br { bottom: 5px; right: 5px; }

  .post-image-wrapper {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-date {
    font-size: 0.75rem;
    color: #2d1a00;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1a1000;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.3), 0 -1px 0 rgba(0, 0, 0, 0.5);
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .post-description {
    font-size: 0.875rem;
    line-height: 1.5;
    color: #2d1a00;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.2);
    margin: 0 0 12px 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    font-size: 0.875rem;
    font-weight: 700;
    color: #1a1000;
    text-decoration: underline;
  }
</style>

