---
import { type Language, useTranslations, getLocalizedUrl } from '../i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/radio', label: t('nav.radio') },
  { href: '/tobacco', label: t('nav.tobacco') },
  { href: '/books', label: t('nav.books') },
  { href: '/blog', label: t('nav.blog') },
  { href: '/about', label: t('nav.about') },
];
---

<footer class="bg-neutral border-t-2 border-primary-300 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      
      <div class="flex flex-col items-center md:items-start">
        <a href={getLocalizedUrl('/', lang)} class="flex items-center gap-2 md:gap-3 text-gray-900 hover:text-primary-700 transition-colors mb-2">
          <img src="/portugal.jpg" alt="Portugal Flag" class="h-8 w-16 md:h-10 md:w-15 object-cover rounded shadow-sm" />
          <div class="flex flex-col justify-center gap-0">
            <span class="text-lg md:text-xl font-bold leading-tight">{t('site.title')}</span>
            <span class="text-xs md:text-sm font-normal text-gray-600 leading-tight -mt-0.5">CR6IK - CT4IK - LU5OM</span>
          </div>
        </a>
        <p class="text-sm text-gray-600">{t('site.tagline')}</p>
      </div>

      <div class="flex flex-wrap justify-center gap-x-6 gap-y-2">
        {quickLinks.map(link => (
          <a 
            href={getLocalizedUrl(link.href, lang)}
            class="text-sm text-gray-700 hover:text-primary-700 transition-colors font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>

      <div class="text-center md:text-right">
        <p class="text-sm text-gray-600">
          Â© {currentYear}
        </p>
        <p class="text-xs text-gray-500">
          {t('footer.copyright')}
        </p>
      </div>
    </div>
  </div>
</footer>

