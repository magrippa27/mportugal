---
import { type Language, useTranslations, getLocalizedUrl } from '../i18n/utils';
import LanguageDropdown from './LanguageDropdown.astro';
import MobileNav from './react/MobileNav';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const navItems = [
  { href: '/', label: t('nav.home') },
  { href: '/radio', label: t('nav.radio') },
  { href: '/tobacco', label: t('nav.tobacco') },
  { href: '/books', label: t('nav.books') },
  { href: '/blog', label: t('nav.blog') },
  { href: '/about', label: t('nav.about') },
];
---

<header class="bg-neutral border-b-2 border-primary-300 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href={getLocalizedUrl('/', lang)} class="flex items-center gap-2 md:gap-3 text-gray-900 hover:text-primary-700 transition-colors">
        <img src="/portugal.jpg" alt="Portugal Flag" class="h-8 w-16 md:h-10 md:w-15 object-cover rounded shadow-sm" />
        <div class="flex flex-col justify-center gap-0">
          <span class="hidden sm:inline text-xl md:text-2xl font-bold leading-tight">{t('site.title')}</span>
          <span class="sm:hidden text-lg font-bold leading-tight">M. Portugal</span>
          <span class="text-xs md:text-sm font-normal text-gray-600 leading-tight -mt-0.5">CR6IK - CT4IK - LU5OM</span>
        </div>
      </a>
      
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a 
            href={getLocalizedUrl(item.href, lang)} 
            class="text-gray-700 hover:text-primary-700 transition-colors font-medium"
          >
            {item.label}
          </a>
        ))}
        <LanguageDropdown lang={lang} currentPath={Astro.url.pathname} />
      </nav>
      
      <div class="md:hidden">
        <MobileNav client:load lang={lang} navItems={navItems} currentPath={Astro.url.pathname} />
      </div>
    </div>
  </div>
</header>

