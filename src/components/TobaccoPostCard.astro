---
import { type Language, useTranslations } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  lang: Language;
  categories?: string[];
  heroImage?: string | null;
}

const { title, description, pubDate, slug, lang, heroImage } = Astro.props;
const t = useTranslations(lang);
const baseUrl = import.meta.env.BASE_URL;
const finalHeroImage = heroImage || `${baseUrl}placeholders/tobacco-post-default.jpg`;

const formattedDate = pubDate.toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="tobacco-post-card">
  <a href={`${import.meta.env.BASE_URL}${lang}/blog/${slug}`} class="vintage-post-frame">
    <div class="vintage-post-border">
      <div class="post-image-wrapper">
        <img src={finalHeroImage} alt={title} class="post-image" />
      </div>
      
      <div class="post-content">
        <time datetime={pubDate.toISOString()} class="post-date">{formattedDate}</time>
        <h3 class="post-title">{title}</h3>
        <div class="ornament-line">◆</div>
        <p class="post-description">{description}</p>
        <div class="read-more">{t('blog.readMore')} →</div>
      </div>
    </div>
  </a>
</article>

<style>
  .tobacco-post-card {
    height: 100%;
  }

  .vintage-post-frame {
    display: block;
    background: linear-gradient(135deg, #8b4513 0%, #5c2e1a 100%);
    border-radius: 8px;
    padding: 10px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    height: 100%;
    transition: transform 0.3s ease;
  }

  .vintage-post-frame:hover {
    transform: translateY(-4px);
  }

  .vintage-post-border {
    background: linear-gradient(135deg, #f5e6d3 0%, #e8d4b8 50%, #f5e6d3 100%);
    border: 3px solid #8b4513;
    border-radius: 6px;
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .vintage-post-border::before {
    content: '';
    position: absolute;
    left: 4px;
    right: 4px;
    top: 194px;
    bottom: 4px;
    border: 1px double #8b4513;
    border-top: none;
    border-radius: 0 0 4px 4px;
    pointer-events: none;
    z-index: 1;
  }

  .post-image-wrapper {
    width: 100%;
    height: 180px;
    overflow: hidden;
    position: relative;
  }
  
  .post-image-wrapper::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(135deg, #f5e6d3 0%, #e8d4b8 50%, #f5e6d3 100%);
    z-index: 2;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-date {
    font-size: 0.75rem;
    color: #5c2e1a;
    font-style: italic;
    margin-bottom: 8px;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #3d1f0f;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ornament-line {
    color: #b8860b;
    font-size: 0.75rem;
    margin: 8px 0;
    background: linear-gradient(135deg, #f5e6d3 0%, #e8d4b8 50%, #f5e6d3 100%);
    padding: 4px 0;
  }

  .post-description {
    font-size: 0.875rem;
    line-height: 1.5;
    color: #5c2e1a;
    margin: 0 0 12px 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    font-size: 0.875rem;
    font-weight: 600;
    color: #8b4513;
    text-decoration: underline;
  }
</style>

