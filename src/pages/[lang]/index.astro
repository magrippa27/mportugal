---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import RadioBookCard from '../../components/RadioBookCard.astro';
import TobaccoBookCard from '../../components/TobaccoBookCard.astro';
import AcademicBookCard from '../../components/AcademicBookCard.astro';
import RadioPostCard from '../../components/RadioPostCard.astro';
import TobaccoPostCard from '../../components/TobaccoPostCard.astro';
import AcademicPostCard from '../../components/AcademicPostCard.astro';
import RadioAwardNav from '../../components/RadioAwardNav.astro';
import TobaccoLabelCard from '../../components/TobaccoLabelCard.astro';
import { type Language, useTranslations, languages, getLocalizedUrl } from '../../i18n/utils';
import { normalizeImagePath } from '../../utils/images';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const allPostsCollection = (await getCollection('blog')) as any[];
const allPosts = allPostsCollection.filter(post => post.data.language === lang);

const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latestPosts = [];
const usedCategories = new Set();

for (const post of sortedPosts) {
  if (latestPosts.length >= 3) break;
  
  const primaryCategory = post.data.categories?.[0] || 'other';
  
  if (!usedCategories.has(primaryCategory)) {
    latestPosts.push(post);
    usedCategories.add(primaryCategory);
  }
}

if (latestPosts.length < 3) {
  for (const post of sortedPosts) {
    if (latestPosts.length >= 3) break;
    if (!latestPosts.includes(post)) {
      latestPosts.push(post);
    }
  }
}

const allBooksCollection = (await getCollection('books' as any)) as any[];
const allBooks = allBooksCollection.filter(book => book.data.language === lang);
const featuredBooks = allBooks
  .sort((a, b) => b.data.publicationDate.valueOf() - a.data.publicationDate.valueOf())
  .slice(0, 3);
---

<MainLayout 
  title={t('site.title')}
  description={t('site.tagline')}
  lang={lang}
>
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden py-20">
    <div class="absolute inset-0 z-0">
      <img 
        src={normalizeImagePath('/desk.webp')}
        alt={t('site.title')}
        class="w-full h-full object-cover object-center"
      />
      <div class="absolute inset-0 bg-black bg-opacity-40"></div>
    </div>
    
    <div class="relative z-10 px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto w-full">
      <div class="text-center mb-10">
        <div class="group bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl shadow-2xl px-8 py-10 md:px-12 md:py-12 inline-block transition-all duration-500 hover:bg-white/15">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-5 drop-shadow-lg">
            {'Manuel Wilches'}
          </h1>
          <div class="flex items-center justify-center gap-6 md:gap-8 my-6 overflow-hidden max-h-0 opacity-0 group-hover:max-h-64 group-hover:opacity-100 transition-all duration-500">
            <img src={normalizeImagePath('/rcsalta.png')} alt="RC Salta" class="h-32 md:h-40 w-auto object-contain drop-shadow-2xl" />
            <img src={normalizeImagePath('/galo.png')} alt="Galo de Barcelos" class="h-32 md:h-40 w-auto object-contain drop-shadow-2xl" />
          </div>
          <p class="text-2xl md:text-3xl text-white/90 drop-shadow-md font-light tracking-wide">
            {'CR6IK - CT4IK - LU5OM'}
          </p>
        </div>
      </div>
      
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl shadow-2xl p-4 md:p-5 max-w-5xl mx-auto">
        <div class="grid md:grid-cols-2 gap-4 md:gap-6 scale-80 md:scale-95 origin-center md:grid-rows-1">
          <div class="card-wrapper transform transition-all duration-500 hover:scale-105 min-h-[280px] md:min-h-[320px] flex grayscale hover:grayscale-0 opacity-60 hover:opacity-100 brightness-150 hover:brightness-100">
            <RadioAwardNav
              title={t('home.radioCard.title')}
              description={t('home.radioCard.description')}
              link={getLocalizedUrl('/radio', lang)}
            />
          </div>
          <div class="card-wrapper transform transition-all duration-500 hover:scale-105 min-h-[280px] md:min-h-[320px] flex grayscale hover:grayscale-0 opacity-60 hover:opacity-100 brightness-150 hover:brightness-100">
            <TobaccoLabelCard
              title={t('home.tobaccoCard.title')}
              content={t('home.tobaccoCard.description')}
              link={getLocalizedUrl('/tobacco', lang)}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  {featuredBooks.length > 0 && (
    <section class="py-16 bg-neutral">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900">
            {t('home.featuredBooks')}
          </h2>
          <a 
            href={`${import.meta.env.BASE_URL}${lang}/books`}
            class="text-primary-700 hover:text-primary-900 font-medium underline"
          >
            {t('home.viewAllBooks')} →
          </a>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredBooks.map(book => {
            const BookComponent = book.data.category === 'radio' 
              ? RadioBookCard 
              : book.data.category === 'tobacco' 
                ? TobaccoBookCard 
                : AcademicBookCard;
            
            return (
              <BookComponent
                title={book.data.title}
                category={book.data.category}
                coverImage={book.data.coverImage}
                summary={book.data.summary}
                slug={book.id}
                lang={lang}
                publicationDate={book.data.publicationDate}
              />
            );
          })}
        </div>
      </div>
    </section>
  )}

  <section class="py-16 bg-neutral">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">
          {t('home.latestPosts')}
        </h2>
        <a 
          href={`${import.meta.env.BASE_URL}${lang}/blog`}
          class="text-primary-700 hover:text-primary-900 font-medium underline"
        >
          {t('home.viewAllPosts')} →
        </a>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestPosts.map(post => {
          const hasRadio = post.data.categories?.includes('radio');
          const hasTobacco = post.data.categories?.includes('tobacco');
          const PostComponent = hasRadio 
            ? RadioPostCard 
            : hasTobacco 
              ? TobaccoPostCard 
              : AcademicPostCard;
          
          return (
            <PostComponent
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.id}
              lang={lang}
              categories={post.data.categories}
              heroImage={post.data.heroImage}
            />
          );
        })}
      </div>
    </div>
  </section>
</MainLayout>

