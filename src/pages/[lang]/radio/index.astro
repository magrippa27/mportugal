---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MainLayout from '../../../layouts/MainLayout.astro';
import HorizontalBookCard from '../../../components/HorizontalBookCard.astro';
import PostCard from '../../../components/PostCard.astro';
import RadioAward from '../../../components/RadioAward.astro';
import { type Language, useTranslations, languages } from '../../../i18n/utils';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const allBooksCollection = (await getCollection('books' as any)) as any[];
const radioBooks = allBooksCollection.filter(book => 
  book.data.language === lang && book.data.category === 'radio'
);

const allPostsCollection = (await getCollection('blog')) as any[];
const radioPosts = allPostsCollection.filter(post => 
  post.data.language === lang && post.data.categories?.includes('radio')
);
const sortedPosts = radioPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const awards = [
  {
    title: "DXCC",
    description: lang === 'en' 
      ? "Rich in history, DXCC is the most prestigious award in Amateur Radio"
      : "Rico en historia, DXCC es el premio mÃ¡s prestigioso en Radio Amateur",
    date: "2018"
  },
  {
    title: "WAS",
    description: lang === 'en'
      ? "Worked All States award - connecting all 50 US states"
      : "Premio TrabajÃ³ Todos los Estados - conectando los 50 estados de EE.UU.",
    date: "2019"
  },
  {
    title: "WAC",
    description: lang === 'en'
      ? "Worked-All-Continents award for working and confirming all six continents"
      : "Premio TrabajÃ³ Todos los Continentes - confirmando los seis continentes",
    date: "2017"
  },
  {
    title: "VUCC",
    description: lang === 'en'
      ? "The ultimate contest for VHF/UHF enthusiasts"
      : "El concurso definitivo para entusiastas de VHF/UHF",
    date: "2020"
  },
  {
    title: "QSL Bureau",
    description: lang === 'en'
      ? "ARRL outgoing and incoming QSL service"
      : "Servicio ARRL de QSL entrantes y salientes",
    date: "2016"
  },
  {
    title: "A-1 Operator",
    description: lang === 'en'
      ? "Only the best operators are nominated for the A-1 Operator Club"
      : "Solo los mejores operadores son nominados para el Club A-1",
    date: "2021"
  }
];
---

