---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MainLayout from '../../../layouts/MainLayout.astro';
import TobaccoBookCard from '../../../components/TobaccoBookCard.astro';
import TobaccoPostCard from '../../../components/TobaccoPostCard.astro';
import { type Language, useTranslations, languages } from '../../../i18n/utils';

export async function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const allBooksCollection = (await getCollection('books' as any)) as any[];
const tobaccoBooks = allBooksCollection.filter(book => 
  book.data.language === lang && book.data.category === 'tobacco'
);

const allPostsCollection = (await getCollection('blog')) as any[];
const tobaccoPosts = allPostsCollection.filter(post => 
  post.data.language === lang && post.data.categories?.includes('tobacco')
);
const sortedPosts = tobaccoPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<MainLayout 
  title={t('tobacco.title')}
  description={t('tobacco.intro')}
  lang={lang}
>
  <section class="relative h-[400px] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/tobacco-1792070_1920.jpg" 
        alt={t('tobacco.title')}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black bg-opacity-60"></div>
    </div>
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl shadow-2xl px-8 py-10 md:px-12 md:py-12 inline-block">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg">
          {t('tobacco.title')}
        </h1>
        <p class="text-xl md:text-2xl text-white drop-shadow-md">
          {t('tobacco.intro')}
        </p>
      </div>
    </div>
  </section>

  <div class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      {tobaccoBooks.length > 0 && (
        <section class="mb-20">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center mb-8">
              <h2 class="text-3xl font-bold text-gray-900">
                {t('tobacco.booksSection')}
              </h2>
              <a 
                href={`${import.meta.env.BASE_URL}${lang}/books`}
                class="text-primary-700 hover:text-primary-900 font-medium underline"
              >
                {t('home.viewAllBooks')} →
              </a>
            </div>
              <div class="grid md:grid-cols-2 gap-8">
                {tobaccoBooks.map(book => (
                  <TobaccoBookCard
                    title={book.data.title}
                    category={book.data.category}
                    coverImage={book.data.coverImage}
                    summary={book.data.summary}
                    slug={book.id}
                    lang={lang}
                    publicationDate={book.data.publicationDate}
                  />
                ))}
              </div>
          </div>
        </section>
      )}

      {sortedPosts.length > 0 && (
        <section>
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center mb-8">
              <h2 class="text-3xl font-bold text-gray-900">
                {t('tobacco.articlesSection')}
              </h2>
              <a 
                href={`${import.meta.env.BASE_URL}${lang}/blog/category/tobacco`}
                class="text-primary-700 hover:text-primary-900 font-medium underline"
              >
                {t('home.viewAllPosts')} →
              </a>
            </div>
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {sortedPosts.map(post => (
                  <TobaccoPostCard
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                    slug={post.id}
                    lang={lang}
                    categories={post.data.categories}
                    heroImage={post.data.heroImage}
                  />
                ))}
              </div>
          </div>
        </section>
      )}
    </div>
  </div>
</MainLayout>

